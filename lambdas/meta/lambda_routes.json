{
  "auth_claims_handler": {
    "path": "verify",
    "methods": ["GET"]
  },
  "file_upload_handler": {
    "path": "uploads",
    "methods": ["POST"],
    "request_schema": {
      "type": "object",
      "properties": {
        "fileHash": { "type": "string" },
        "fileName": { "type": "string" },
        "fileSize": { "type": "integer" },
        "fileType": { "type": "string" },
        "uploadType": { "type": "string", "enum": ["standard", "custom"] }
      },
      "required": ["fileHash", "fileName", "fileSize"]
    }
  },
  "file_confirmation_handler": {
    "path": "uploads",
    "methods": ["GET"],
    "request_schema": {
      "type": "object",
      "properties": {
        "fileId": {
          "type": "string",
          "description": "Unique identifier for the uploaded file"
        }
      },
      "required": ["fileId"]
    }
  }
}
